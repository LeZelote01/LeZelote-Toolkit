# Burp Suite Professional Configuration
# Pentest-USB Toolkit - Burp Container Configuration
# Version: 1.0.0

# Project configuration
project.name=Pentest-USB-Project
project.file=/home/burp/.BurpSuite/pentest-usb-project.burp
project.load_on_startup=true

# Proxy configuration
proxy.listener.port=8080
proxy.listener.interface=*
proxy.listener.running=true
proxy.listener.certificate_mode=per_host
proxy.intercept.client_requests=false
proxy.intercept.server_responses=false

# SSL/TLS configuration
ssl.negotiation_fail_action=ignore
ssl.override_user_options=false
ssl.client_certificates.enabled=false

# Scanner configuration
scanner.live_scanning.enabled=false
scanner.live_audit.enabled=false
scanner.live_passive_crawl.enabled=true
scanner.reporting.make_http_requests=true

# Active scanner settings
scanner.active.audit_optimization.skip_ineffective_checks=true
scanner.active.audit_optimization.consolidate_passive_issues=true
scanner.active.audit_optimization.follow_redirections=true
scanner.active.audit_optimization.consolidate_passive_issues=true

# Passive scanner settings
scanner.passive.enabled=true
scanner.passive.scan_all_requests=true
scanner.passive.scan_all_responses=true

# Spider configuration
spider.max_link_depth=unlimited
spider.max_parametrized_requests=1000
spider.detect_forms=true
spider.submit_forms=prompt
spider.process_comments=true
spider.parse_robots_txt=true
spider.check_url_uniqueness=path_and_query
spider.ignore_links_to_other_domains=false

# Intruder configuration
intruder.request_engine.threads_per_connection=1
intruder.request_engine.retry_on_network_failure=true
intruder.request_engine.pause_before_retry=2000
intruder.request_engine.throttle_between_requests=0
intruder.request_engine.start_paused=false

# Repeater configuration
repeater.update_content_length=true
repeater.unpack_gzip=true
repeater.follow_redirections=never

# HTTP configuration
http.redirections.understand_any_status_code_as_redirection=false
http.redirections.maximum_redirections=10
http.streaming_responses.strip_chunked_encoding_metadata=true
http.streaming_responses.store_streaming_responses=true

# Sessions configuration
sessions.cookie_jar.monitor_cookies=true
sessions.cookie_jar.submit_cookies=true
sessions.macros.enabled=true

# Logging configuration
logging.requests_and_responses.enabled=true
logging.requests_and_responses.log_in_tool_suite=proxy,spider,scanner,intruder,repeater
logging.requests_and_responses.file_path=/home/burp/logs/burp-requests.log
logging.errors.enabled=true
logging.errors.file_path=/home/burp/logs/burp-errors.log

# Extensions configuration
extensions.java_environment.folder_for_loading_library_files=/home/burp/.BurpSuite/bapp-store
extensions.python_environment.folder_for_loading_modules=/home/burp/.BurpSuite/python-modules

# API configuration
api.enabled=true
api.address=127.0.0.1
api.port=1337
api.keys.enabled=false
api.insecure_mode=true

# Collaborator configuration
collaborator.server.enabled=false
collaborator.server.location=
collaborator.server.interaction_timeout=60
collaborator.server.polling_interval=5

# Misc configuration
misc.automatic_project_backup.enabled=true
misc.automatic_project_backup.in_scope_only=false
misc.automatic_project_backup.interval_mins=30
misc.automatic_project_backup.enabled_whilst_spider_running=false
misc.automatic_project_backup.enabled_whilst_scanner_running=false

misc.scheduled_tasks.pause_spider_and_scanner_when_proxy_idle=false
misc.hotkeys.send_to_repeater=Ctrl+R
misc.hotkeys.send_to_intruder=Ctrl+I
misc.hotkeys.send_to_scanner=Ctrl+Shift+A
misc.hotkeys.forward_intercepted_proxy_message=Ctrl+F
misc.hotkeys.toggle_proxy_interception=Ctrl+T
misc.hotkeys.switch_to_target=Ctrl+Shift+T
misc.hotkeys.switch_to_proxy=Ctrl+Shift+P
misc.hotkeys.switch_to_scanner=Ctrl+Shift+S
misc.hotkeys.switch_to_intruder=Ctrl+Shift+I
misc.hotkeys.switch_to_repeater=Ctrl+Shift+R

# Display configuration
display.character_sets.preferred_display_character_set=UTF-8
display.character_sets.display_interface_in_character_set=Default (English)
display.http_message_display.font_size=11
display.http_message_display.font_smoothing=true

# User interface configuration
ui.look_and_feel=System
ui.display_items_in_message_editor_request_viewer=true
ui.display_items_in_message_editor_response_viewer=true
ui.show_learn_tab=false
ui.show_comments_in_site_map=true

# Target scope configuration
target.scope.include_subdomains=true
target.scope.exclude_file_extensions=gif,jpg,jpeg,png,css,js,ico,woff,woff2

# Performance configuration
performance.number_of_indexing_threads=4
performance.number_of_active_scanning_insertion_points=20
performance.throttle_between_requests=0
performance.number_of_scanner_threads=10

# Network configuration
network.connections.upstream_proxy.enabled=false
network.connections.upstream_proxy.host=
network.connections.upstream_proxy.port=8080
network.connections.upstream_proxy.auth.enabled=false
network.connections.socks_proxy.enabled=false
network.connections.timeouts.normal=120
network.connections.timeouts.domain_name_resolution=30
network.connections.hostname_resolution=use_system_dns
network.connections.out_of_scope_requests.drop_all_out_of_scope_requests=false

# Platform authentication configuration
platform_authentication.credentials.enabled=false
platform_authentication.prompt_on_authentication_failure=false

# TLS configuration
tls.client_certificates.enabled=false
tls.server_certificates.ca_certificates=/home/burp/.BurpSuite/cacert.pem
tls.protocols.disable_sslv2=true
tls.protocols.disable_sslv3=true
tls.protocols.disable_tlsv1=false
tls.protocols.disable_tlsv1_1=false
tls.protocols.disable_tlsv1_2=false
tls.protocols.disable_tlsv1_3=false

# Pentest-USB specific configurations
pentest_usb.integration.enabled=true
pentest_usb.integration.toolkit_version=1.0.0
pentest_usb.integration.auto_start_proxy=true
pentest_usb.integration.export_results=true
pentest_usb.integration.report_directory=/home/burp/reports

# Custom scan configurations for Pentest-USB
pentest_usb.scan_configs.quick_scan.enabled=true
pentest_usb.scan_configs.quick_scan.audit_optimization=true
pentest_usb.scan_configs.quick_scan.consolidate_issues=true

pentest_usb.scan_configs.comprehensive_scan.enabled=true
pentest_usb.scan_configs.comprehensive_scan.audit_optimization=false
pentest_usb.scan_configs.comprehensive_scan.thorough_mode=true

# Extensions for Pentest-USB integration
pentest_usb.extensions.auto_load.enabled=true
pentest_usb.extensions.logger_plus_plus=true
pentest_usb.extensions.authorize=true
pentest_usb.extensions.json_beautifier=true
pentest_usb.extensions.param_miner=true

# Automation settings
pentest_usb.automation.enabled=true
pentest_usb.automation.script_path=/opt/burp-scripts/burp-automation.py
pentest_usb.automation.api_enabled=true
pentest_usb.automation.webhook_url=

# Report generation settings
pentest_usb.reporting.auto_generate=true
pentest_usb.reporting.format=html
pentest_usb.reporting.include_requests_responses=true
pentest_usb.reporting.include_vulnerability_details=true