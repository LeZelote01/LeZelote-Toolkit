# Configuration Backend CyberSec Toolkit Pro 2025
# Mode portable avec adaptation Kubernetes
PORTABLE_MODE=true

# Base de données (mode portable SQLite)
DATABASE_TYPE=sqlite
MONGO_URL=sqlite:///app/portable/database/cybersec_toolkit.db

# CORS pour environnement Kubernetes
CORS_ORIGINS=http://localhost:8002,http://localhost:3000,https://*.emergentagent.com,https://dev-roadmap-guide.preview.emergentagent.com

# LLM Configuration (optionnel)
EMERGENT_LLM_KEY=
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini

# Sécurité
JWT_SECRET_KEY=dev-secret-key-cybersec-toolkit-2025
API_RATE_LIMIT=100

# Cache (optionnel)
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379

# Logs
LOG_LEVEL=INFO

# Chemin données portable
PORTABLE_ROOT=/app
PORTABLE_DATA=/app/portable/database/data
BACKEND_PORT=8000
FRONTEND_PORT=8002
REACT_APP_BACKEND_URL=http://localhost:8000
